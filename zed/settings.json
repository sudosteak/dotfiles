// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_size": 15.0,
  "context_servers": {
    "mcp-server-markitdown": {
      "enabled": false,
      "settings": {},
    },
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-56370bb2-2f3b-4bf3-87dd-956cfc84d721",
      },
    },
  },
  "git": {
    "branch_picker": {
      "show_author_name": false,
    },
    "blame": {
      "show_avatar": false,
    },
    "inline_blame": {
      "enabled": true,
    },
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default",
      },
    },
    "font_size": 14.0,
    "shell": {
      "program": "fish",
    },
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "use_modifier_to_send": true,
    "button": true,
    "model_parameters": [],
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "outline_panel": {
    "folder_icons": true,
    "file_icons": true,
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": false,
    "auto_reveal_entries": true,
    "git_status": true,
    "folder_icons": false,
    "file_icons": true,
  },
  "zoomed_padding": true,
  "window_decorations": "client",
  "bottom_dock_layout": "contained",
  "preview_tabs": {
    "enable_preview_from_file_finder": false,
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": false,
  },
  "title_bar": {
    "show_menus": true,
    "show_user_picture": false,
    "show_project_items": true,
    "show_branch_name": true,
    "show_branch_icon": false,
  },
  "search_wrap": false,
  "search": {
    "regex": true,
  },
  "diagnostics": {
    "inline": {
      "enabled": false,
    },
  },
  "languages": {
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          // change '--indent 2' to match preffered indentation size
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"],
        },
      },
      "tab_size": 2,
      "hard_tabs": false,
    },
    "Python": {
      "tab_size": 4,
      "formatter": "language_server",
      "language_servers": ["basedpyright"],
      "format_on_save": "on",
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
        },
      },
    },
  },
  "prettier": {
    "allowed": true,
  },
  "colorize_brackets": true,
  "lsp_document_colors": "inlay",
  "inlay_hints": {
    "show_background": true,
    "enabled": true,
  },
  "show_whitespaces": "selection",
  "indent_guides": {
    "coloring": "fixed",
    "background_coloring": "disabled",
  },
  "toolbar": {
    "code_actions": true,
  },
  "relative_line_numbers": "enabled",
  "agent_buffer_font_size": 12.0,
  "agent_ui_font_size": 15.0,
  "ui_font_weight": 400.0,
  "auto_update": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "redact_private_values": true,
  "ui_font_family": ".ZedSans",
  "buffer_line_height": "comfortable",
  "buffer_font_family": ".ZedMono",
  "icon_theme": "Light Charmed Icons",
  "buffer_font_size": 15.0,
  "theme": "VSCode Dark Modern",
}
